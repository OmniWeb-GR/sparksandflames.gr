<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site">
	<name>OmniTemplate</name>
	<creationDate>27/12/2021</creationDate>
	<author>OmniWeb</author>
	<authorEmail>info@omniweb.gr</authorEmail>
	<authorUrl>https://www.omniweb.gr</authorUrl>
	<copyright>(C) 2024 OmniWeb</copyright>
	<version>2024.01.25</version>
	<description>Adapted for sparksandflames.gr</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>js</folder>
		<folder>scss</folder>
	</files>
	<positions>
		<position>header</position>
		<position>below-header</position>
        <position>above-main</position>
		<position>left-sidebar</position>
		<position>content</position>
		<position>right-sidebar</position>
        <position>below-main</position>
		<position>above-footer</position>
		<position>footer</position>
		<position>fixed-bottom</position>
		<position>offcanvas-header</position>
		<position>offcanvas-body</position>
	</positions>
	<config>
		<fields name="params">
			<fieldset name="options">
				<field
					name="container-class"
					type="text"
					default="container"
					label="Container class"
					filter="string"
				/>
				<field
					name="sticky-header"
					type="radio"
					label="Sticky header"
					layout="joomla.form.field.radio.switcher"
					default="0"
					filter="integer"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field
					name="responsive-sticky-header"
					type="radio"
					label="Responsive sticky header"
					default="1"
					filter="integer"
					showon="sticky-header:1"
				>
					<option value="1">XS and up</option>
					<option value="2">SM and up</option>
					<option value="3">MD and up</option>
					<option value="4">LG and up</option>
					<option value="5">XL and up</option>
				</field>
				<field
					name="version"
					type="text"
					default="0"
					label="Version number query string"
					filter="integer"
				/>
			</fieldset>
		</fields>
	</config>
</extension>